{
  "presets": ["@babel/preset-env"],
  "plugins": [
    ["@babel/plugin-proposal-class-properties", { "loose": true}],
    ["module-resolver", { "root": ["./src"] }]
  ],
  "env": {
    "production": {
      "ignore": [
        "**/__tests__",
        "**/__mocks__",
        "**/*.test.js"
      ]
    }
  }
}
